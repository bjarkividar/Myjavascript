@model IEnumerable<MyJavaScript.Models.Entity.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Projects</h2>


<p>
    @Html.ActionLink("Create New Project", "Create", "Projects", new { @class = "btn btn-info" })

</p>

@using (Html.BeginForm())
{
    <p>
        Title: @Html.TextBox("search") <br/>
        <input type="submit" value="Search" />
    </p>
}
 
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@@Html.DisplayFor(modelItem => item.Title)*@
            @Html.ActionLink(item.Title, "Index", "Files", new { id = item.ID }, null)

        </td>
        
        <td>
            @Html.ActionLink(" ", "ShareProject", new { id = item.ID }, new { @class = "glyphicon glyphicon-link"})
            @*@Html.ActionLink("Details", "Details", new { id=item.ID })*@
            @Html.ActionLink(" ", "Delete", new { id=item.ID }, new { @class = "glyphicon glyphicon-remove" })
        </td>
    </tr>
}

</table>
