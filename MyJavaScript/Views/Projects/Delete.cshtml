﻿@model MyJavaScript.Models.Entity.Project

@{
    ViewBag.Title = "Delete";
}


<div>
    <hr />

    @using (Html.BeginForm("Delete", "Projects", new { id = Model.ID }, FormMethod.Post, new { id = "deleteForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div><br />
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            </div><br />
        </div>
    }

</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#deleteBtn").on("click", function () {
            $("#deleteForm").submit();
        });
    </script>
}

